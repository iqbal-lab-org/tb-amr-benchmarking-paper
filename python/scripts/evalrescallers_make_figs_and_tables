#!/usr/bin/env python3

import argparse
from collections import OrderedDict
import csv
import json
import os
import shutil

import evalrescallers_paper

def fix_dataset_and_tool_columns(infile, outfile):
    replace = {
        'Dataset': {'10k_test': 'test', '10k_validate': 'validate', 'mykrobe': 'train', 'Dataset': 'Dataset'},
        'Tool': {'10k_predict': 'NEJM-2018'},
    }

    with open(infile) as f_in, open(outfile, 'w') as f_out:
        reader = csv.DictReader(f_in, delimiter='\t')
        print(*reader.fieldnames, sep='\t', file=f_out)
        for d in reader:
            for key in replace:
                if d[key] in replace[key]:
                    d[key] = replace[key][d[key]]
            #d['Dataset'] = replace['Dataset'][d['Dataset']]
            print(*d.values(), sep='\t', file=f_out)


